<section id="recent-works">
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>Ultimas denuncias</h3>
            <div class="row">
                <% Complaint.last(6).each do |complaint| %>
                    <div class="col-xs-6">
                        <div class="portfolio-item">
                            <a href="/complaints/<%= complaint.id %>">
                            <div class="item-inner">

                                <% if  not @complaint.image.blank? %>
                                    <%= image_tag @complaint.image.url %>
                                <% else %>
                                    <%= image_tag "hamFINAL.png" %>
                                <%end %>


                                <%= image_tag complaint.image.url %>
                                <h5><%= complaint.title %></h5>
                            </div>           
                            </a>
                        </div><!--/.portfolio-item-->
                    </div>
                <% end %>
            </div>
        </div>
        <div class="col-md-6">
        <h3>En las redes sociales</h3>

        <script type="text/javascript" class="rebelmouse-embed-script" src="https://www.rebelmouse.com/static/js-build/embed/embed.js?site=hackeandoalmachismo&height=1500&flexible=1&dont_load_new_posts=1&more_button=1&show_rebelnav=1"></script>
        </div>
    </div><!--/.row-->
</div>
</section><!--/#recent-works-->
